<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head'); %>
    <script src="/js/registerStudent.js"></script>
</head>
<body class="container">

<header>
    <%- include('../../partials/generalHeader'); %>
</header>

<br><br><br><br>
<form action="/complete-profile/student" method="PUT">
    <div class="mb-3">
        <label for="inputGroupSelect01" class="form-label">Optiuni</label>
        <select class="form-select" id="inputGroupSelect01" name="faculty_id">
            <option selected>Alege facultatea</option>
            <% faculties.forEach(function(faculty) { %>          
                <option value="<%= faculty.id %>"><%= faculty.name %></option>
            <% }); %>
        </select>
    </div>
    <div class="mb-3">
        <label for="inputGroupSelect02" class="form-label">Optiuni</label>
        <select class="form-select" id="inputGroupSelect02" name="specialization_id">
            <option selected>Alege specializarea</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="inputGroupSelect03" class="form-label">Optiuni</label>
        <select class="form-select" id="inputGroupSelect03" name="education_level">
            <option selected>Alege tipul de învățământ</option>
            <option value="bsc">BSC</option>
            <option value="msc">MSC</option>
        </select>
    </div> 
    <button type="submit" class="btn btn-primary">Submit</button>
    <span>Ai deja cont?  </span><a href="/login">Conecteaza-te</a>
</form>

<footer class="footer bg-light text-center text-lg-start">
    <%- include('../../partials/footer'); %>
</footer>

</body>
</html>
