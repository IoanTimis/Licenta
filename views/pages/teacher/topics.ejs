<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body class="container">
    <header>
        <%- include('../../partials/teacherHeader') %>
    </header>
    <main class="flex-grow-1">
        <div class="container">
            <% user.topics.forEach(function(topic) { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                    <div class="col">
                        <a href="/teacher/topic/<%= topic.id %>" class="text-decoration-none text-dark">
                            <div class="card">
                                <img src="" class="card-img-top" alt="">
                                <div class="card-body">
                                    <h5 class="card-title">Titlu: <%= topic.title %></h5>
                                    <p class="card-text">Descriere: <%= topic.description %></p>
                                    <p class="card-text">Locuri: <%= topic.slots %></p>
                                    <p class="card-text">Tip: <%= topic.type %></p>
                                    <p class="card-text">Profesor: <%= user.name %></p>
                                </div>
                                <div class="card-footer d-flex justify-content-between">
                                    <a href="/teacher/topic/<%= topic.id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                                    <form action="/teacher/topic/<%= topic.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this topic?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
    
    <footer class="footer bg-light text-center text-lg-start">
        <%- include('../../partials/footer') %>
    </footer>
</body>
</html>
