<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body class="container">
    <header>
        <%- include('../../partials/studentHeader') %>
    </header>
    <main class="flex-grow-1">
        <div class="container topicsContainer">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                <% topics.forEach(function(topic) { %>
                        <div class="col">
                            <a href="/student/topic/<%= topic.id %>" class="text-decoration-none text-dark">
                            <div class="card">
                                <img src="" class="card-img-top" alt="">
                                <div class="card-body">
                                    <h5 class="card-title">Titlu: <%= topic.title %></h5>
                                    <p>Descriere: <%= truncateText(topic.description, 40) %></p>
                                    <p class="card-text">Cuvinte cheie: <%= topic.keywords %></p>
                                    <p class="card-text">Locuri: <%= topic.slots %></p>
                                    <p class="card-text">Tip: <%= topic.education_level %></p>
                                    <p class="card-text">Profesor: <%= topic.user.name %></p>
                                </div>
                            </div>
                        </a>
                        <div class="card-footer d-flex justify-content-between">
                            <button type="button" class="btn btn-primary applyBtn" data-bs-toggle="modal" data-bs-target="#reqMessageModal">
                                Aplica
                            </button>
                          </div>
                    </div>
            <% }); %>
        </div>
    </div>
    </main>

    <div class="modal fade" id="reqMessageModal" tabindex="-1" aria-labelledby="reqMessageModalLabel" aria="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="reqMessageModalLabel"></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6 id="modalMsg"></h6>
                    <form action="" method="" id="reqMessageForm">
                        <div class="mb-3">
                            <label for="message" class="form-label">Mesaj</label>
                            <textarea class="form-control"  name="message" rows="3"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ÃŽnchide</button>
                            <button type="submit" class="btn btn-primary">Aplica</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <footer class="footer bg-light text-center text-lg-start">
        <%- include('../../partials/footer') %>
    </footer>
</body>
</html>
