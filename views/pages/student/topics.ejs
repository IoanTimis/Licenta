<html lang="en">
<head>
    <%- include('../../partials/head') %>
</head>
<body class="container">
    <header>
        <%- include('../../partials/studentHeader') %>
    </header>
    <main class="flex-grow-1">
        <div class="container">
        <% topics.forEach(function(topic) { %>
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <a href="/student/topic/<%= topic.id %>" class="text-decoration-none text-dark">
                        <div class="card">
                            <img src="" class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title">Titlu: <%= topic.title %></h5>
                                <p class="card-text">Descriere: <%= topic.description %></p>
                                <p class="card-text">Locuri: <%= topic.slots %></p>
                                <p class="card-text">Tip: <%= topic.type %></p>
                                <p class="card-text">Profesor: <%= topic.user.name %></p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>  
    <% }); %>
    
    </main>
    
    <footer class="footer bg-light text-center text-lg-start">
        <%- include('../../partials/footer') %>
    </footer>
</body>
</html>
